{
    "variables": {
      "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
      "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
      "region": "{{env `AWS_DEFAULT_REGION`}}",
      "fah_team": "{{user `fah_team`}}",
      "fah_user": "{{user `fah_user`}}",
      "fah_passkey": "{{user `fah_passkey`}}"
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "ami_name": "packer-ubuntu-arm-folding-at-home-{{timestamp}}",
        "instance_type": "c6gd.large",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `region`}}",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-bionic-18.04-arm64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "ssh_username": "ubuntu"
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "folding/config.xml",
        "destination": "/tmp/config.xml"
      },
      {
        "type": "shell",
        "environment_vars": [
          "fah_team={{user `fah_team`}}",
          "fah_user={{user `fah_user`}}",
          "fah_passkey={{user `fah_passkey`}}"
        ],
        "scripts": ["./folding/get_armdeb.sh", "./folding/install_client.sh"]
      }
    ],
    "post-processors": [
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      },
      {
        "type": "shell-local",
        "scripts": ["./common/post-process.sh"]
      }
    ]
  }
  